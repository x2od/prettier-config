{
	"apexInsertFinalNewline": false,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"experimentalTernaries": true,
	"printWidth": 180,
	"singleAttributePerLine": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"xmlSelfClosingSpace": true,
	"overrides": [
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"parser": "html",
				"attributeGroups": ["$DEFAULT", "^html-", "aria-"],
				"attributeIgnoreCase": true
			}
		},
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc", "printWidth": 80 }
		},
		{
			"files": "*.{cls,trigger}",
			"options": {
				"parser": "apex",
				"tabWidth": 2,
				"useTabs": true
			}
		},
		{
			"files": "*.{apex,soql}",
			"options": { "parser": "apex-anonymous" }
		},
		{
			"files": "*meta.xml",
			"options": {
				"parser": "xml",
				"xmlSelfClosingSpace": false,
				"bracketSameLine": true
			}
		},
		{
			"files": "*.{yml,yaml}",
			"options": { "useTabs": false }
		},
		{
			"files": "*.{prettierrc,json}",
			"options": { "parser": "json", "printWidth": 80 }
		},
		{
			"files": "**/pmd/*.xml",
			"options": {
				"parser": "xml",
				"xmlWhitespaceSensitivity": "preserve",
				"xmlSelfClosingSpace": true
			}
		},
		{
			"files": "doc*/**/*.html",
			"options": {
				"parser": "html",
				"printWidth": 150,
				"htmlWhitespaceSensitivity": "ignore",
				"singleQuote": false
			}
		}
	],
	"plugins": [
		"prettier-plugin-apex",
		"@prettier/plugin-xml",
		"prettier-plugin-organize-attributes"
	],
	"$schema": "https://json.schemastore.org/prettierrc"
}
