{
	"$schema": "https://json.schemastore.org/prettierrc",
	"apexInsertFinalNewline": false,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"experimentalTernaries": true,
	"printWidth": 180,
	"singleAttributePerLine": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"xmlSelfClosingSpace": true,
	"overrides": [
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"attributeGroups": [
					"^id$",
					"^name$",
					"$DEFAULT",
					"^html-",
					"^class$",
					"aria-"
				],
				"attributeIgnoreCase": true,
				"parser": "html",
				"singleQuote": false
			}
		},
		{
			"files": "*.{cls,trigger}",
			"options": {
				"parser": "apex",
				"tabWidth": 2,
				"useTabs": true
			}
		},
		{
			"files": "*.trigger",
			"options": {
				"printWidth": 200
			}
		},
		{
			"files": "*.{apex,soql}",
			"options": {
				"parser": "apex-anonymous"
			}
		},
		{
			"files": "*meta.xml",
			"options": {
				"bracketSameLine": true,
				"parser": "xml",
				"useTabs": false,
				"xmlSelfClosingSpace": false
			}
		},
		{
			"files": "*.{yml,yaml}",
			"options": {
				"parser": "yaml",
				"singleQuote": false,
				"useTabs": false
			}
		},
		{
			"files": [".prettierrc.js", ".prettierrc"],
			"options": {
				"printWidth": 80,
				"singleQuote": false
			}
		},
		{
			"files": ".prettierrc",
			"options": {
				"parser": "json"
			}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"printWidth": 80
			}
		},
		{
			"files": "['**/pmd/*.xml', 'ruleset.xml']",
			"options": {
				"parser": "xml",
				"useTabs": true,
				"xmlSelfClosingSpace": true,
				"xmlWhitespaceSensitivity": "preserve"
			}
		},
		{
			"files": "doc*/**/*.html",
			"options": {
				"attributeGroups": ["$CODE_GUIDE"],
				"htmlWhitespaceSensitivity": "ignore",
				"parser": "html",
				"printWidth": 150,
				"singleQuote": false
			}
		},
		{
			"files": "**/lwc/**/*.html",
			"options": {
				"parser": "lwc",
				"printWidth": 80
			}
		}
	],
	"plugins": [
		"prettier-plugin-apex",
		"@prettier/plugin-xml",
		"prettier-plugin-organize-attributes"
	]
}
