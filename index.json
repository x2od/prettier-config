{
	"apexInsertFinalNewline": false,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"experimentalTernaries": true,
	"printWidth": 180,
	"singleAttributePerLine": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"useTabs": true,
	"xmlSelfClosingSpace": true,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc", "printWidth": 80 }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"parser": "html",
				"attributeGroups": [
					"$DEFAULT",
					"^(id|name)$",
					"^html-",
					"^class$",
					"aria-"
				],
				"attributeIgnoreCase": true,
				"singleQuote": false
			}
		},

		{
			"files": "*.{cls,trigger}",
			"options": {
				"parser": "apex",
				"tabWidth": 2,
				"useTabs": true
			}
		},
		{
			"files": "*.trigger",
			"options": {
				"parser": "apex",
				"tabWidth": 2,
				"useTabs": true,
				"printWidth": 200
			}
		},
		{
			"files": "*.{apex,soql}",
			"options": { "parser": "apex-anonymous" }
		},
		{
			"files": "*meta.xml",
			"options": {
				"bracketSameLine": true,
				"parser": "xml",
				"useTabs": false,
				"xmlSelfClosingSpace": false
			}
		},
		{
			"files": "*.{yml,yaml}",
			"options": { "parser": "yaml", "useTabs": false, "singleQuote": false }
		},
		{
			"files": ".prettier*",
			"options": { "parser": "json", "printWidth": 80, "useTabs": true }
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json-stringify",
				"useTabs": true,
				"tabWidth": 2
			}
		},
		{
			"files": "{**/pmd/*.xml, ruleset.xml}",
			"options": {
				"parser": "xml",
				"useTabs": true,
				"xmlWhitespaceSensitivity": "preserve",
				"xmlSelfClosingSpace": true
			}
		},
		{
			"files": "doc*/**/*.html",
			"options": {
				"parser": "html",
				"printWidth": 150,
				"htmlWhitespaceSensitivity": "ignore",
				"singleQuote": false
			}
		}
	],
	"plugins": [
		"prettier-plugin-apex",
		"@prettier/plugin-xml",
		"prettier-plugin-organize-attributes"
	],
	"$schema": "https://json.schemastore.org/prettierrc"
}
