{
	"name": "@x2od/prettier-config",
	"version": "0.0.1",
	"description": "X-Squared base Prettier configuration",
	"scripts": {
		"generateConfig": "printf 'module.exports = ' > index.js && cat index.json >>index.js && printf ';' >> index.js && npx prettier --write index.js",
		"prettier": "prettier --write .",
		"prettier:verify": "prettier --list-different .",
		"minor": "npm version minor",
		"patch": "npm version patch",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/x2od/prettier-config.git"
	},
	"keywords": [
		"prettier"
	],
	"files": [
		"index.js"
	],
	"main": "index.js",
	"author": {
		"name": "David Schach",
		"url": "https://github.com/dschach"
	},
	"license": "MIT",
	"bugs": "https://github.com/x2od/prettier-config/issues",
	"homepage": "https://github.com/x2od/prettier-config#readme",
	"dependencies": {
		"@prettier/plugin-xml": "^3.3.1",
		"prettier-plugin-apex": "^2.1.0",
		"prettier-plugin-organize-attributes": "^1.0.0"
	},
	"devDependencies": {
		"@x2od/prettier-config": "^0.0.1",
		"husky": "^9.0.11",
		"prettier": "^3.2.5"
	}
}
